      script.
        if (!isLoggedIn()){
            $('#logout').hide();
            $('#registerLink')
                .prop('href', '/register?lastPage=' + location);
            $('#loginLink')
                .prop('href', '/login?lastPage=' + location);
        }else {
            $('#register').hide();
            $('#login').hide();
            $('#user')
                .prop('textContent', account.user)
                .append('<span class="caret"></span>');
            $('#logoutLink')
                .prop('href', '/logout?lastPage=' + location);
